<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dashboard - Campus ReConnect</title>
    <link rel="stylesheet" href="../node_modules/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="../node_modules/perfect-scrollbar/dist/css/perfect-scrollbar.min.css" />
    <link rel="stylesheet" href="../stylesheets/style.css" />
    <link rel="stylesheet" href="../stylesheets/dashboard.css" />
    <link rel="shortcut icon" href="../images/favicon.png" />
    <link rel="stylesheet" href="../stylesheets/profile.css" />

</head>

<body class="horizontal-menu">
    <div class=" container-scroller">

        <button class="open-button" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus-circle"  style="font-size:48px;color:#2fa1e9; padding-right:20px;" aria-hidden="true">
                </i></button>

        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Request Event</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="row">
                                <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <label for="name">Name</label>
                                    <input type="text" class="form-control" id="ename">
                                </div>
                                <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <label for="contact">Venue</label>
                                    <input type="text" class="form-control" id="evenue">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <label for="email">From</label>
                                    <input type="datetime-local" class="form-control" value="2018-01-01T00:00" id="efrom">
                                </div>
                                <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <label for="contact">To</label>
                                    <input type="datetime-local" class="form-control" value="2018-01-01T00:00" id="eto">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <label for="city">Content</label>
                                    <textarea rows="5" class="form-control" id="econtent"></textarea>
                                </div>

                            </div>


                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn createEvent" id="usercreate">REQUEST</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- partial:../partials/_navbar.html -->
        <%- include partials/nav.ejs %>

            <!-- partial -->
            <div class="container-fluid page-body-wrapper">
                <div class="row row-offcanvas row-offcanvas-right">

                    <div class="content-wrapper">
                        <div class="row">
                            <div class="col-sm-1"></div>
                            <%- include partials/workspace.ejs %>

                                <!-- <div class="feed-card profile-card" > -->
                                <div class="row col-sm-7">
                                    <% for(var i = 0; i < events.length; i++) { %>

                                        <% if( events[i].isApproved == true) { %>
                                            <div class="col-md-6">
                                                <div class="flip-card" style="margin-bottom: 15px;">
                                                    <div class=" flip-card-inner ">
                                                        <div class="flip-card-front ">
                                                            <img src="../images/faces/<%= i %>.jpg" alt="Avatar " style="width:100%;height:100%; ">
                                                        </div>
                                                        <div class="flip-card-back ">

                                                            <h4>
                                                                <%= events[i].name%>
                                                            </h4>
                                                            <p>
                                                                <%= events[i].content %>
                                                            </p>
                                                            <p>Venue:
                                                                <%= events[i].venue%>
                                                            </p>
                                                            <p>Starts:
                                                                <%= events[i].startTime%>
                                                            </p>
                                                            <p>Ends:
                                                                <%= events[i].endTime%>
                                                            </p>
                                                            <span id="counter">0</span>
                                                            <button class="tick-button"><i class="fa fa-check" style="font-size:20px;color:white; padding-right:20px; " aria-hidden="true "></i></button>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                            <% }} %>

                                </div>

                                <div class="col-sm-1 "></div>





                        </div>



                    </div>

                    <footer class="footer ">
                        <div class="container-fluid clearfix ">
                            <span class="float-right ">
                                <a href="# ">Flying Neurons</a> &copy; 2018
                            </span>
                        </div>
                    </footer>
                </div>
            </div>

            <script src="../node_modules/jquery/dist/jquery.min.js "></script>
            <script src="../node_modules/popper.js/dist/umd/popper.min.js "></script>
            <script src="../node_modules/bootstrap/dist/js/bootstrap.min.js "></script>
            <script src="../node_modules/chart.js/dist/Chart.min.js "></script>
            <script src="../node_modules/perfect-scrollbar/dist/js/perfect-scrollbar.jquery.min.js "></script>
            <script src="../js/sidebar-icon.js "></script>
            <script src="../js/off-canvas.js "></script>
            <script src="../js/hoverable-collapse.js "></script>
            <script src="../js/misc.js "></script>
            <script src="../js/comments.js "></script>
            <script src="./js/workplace.js "></script>
            <script type="text/javascript " src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit "></script>
            <script type="text/javascript " src="../js/translate.js "></script>
            <script src="../js/events.js "></script>
</body>

</html>