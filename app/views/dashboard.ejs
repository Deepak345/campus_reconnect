                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                  <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <div class="row row-offcanvas row-offcanvas-right">

                <div class="content-wrapper">
                    <button class="btn btn-danger" id="logout-btn">LOGOUT</button>
                    <a href="/profile/<%= user._id %>">PROFILE</a>
                    <a href="/chat">CHAT</a>
                    <div class="post-box">
                        <div class="form-group">
                            <textarea class="form-control p-input" id="post-body" rows="3" placeholder="Write Something...."></textarea>
                        </div>
                        <hr>
                        <button class="uploader"><i class="fa fa-plus" style="padding-right:14px;"></i>Upload File</button>
                        <button type="submit" class="btn btn-primary" id="post-btn">Submit</button>
                    </div>

    

                    <% for(var i = 0; i < posts.length; i++) { %>
                    <div class="feed-card">
                        <% var id = posts[i]._id %>
                        <div class="feed-head row">
                            <img src="../images/faces/face2.jpg" class="col-md-1">
                            <div class="col-md-9" style="padding-top:2px;">
                                <h1 class="row"><a href="/profile/<%= posts[i].user._id %>"><%= posts[i].user.name %></a></h1>
                                <p class="row"><%= posts[i].date %></p>
                            </div>
                            <% if(posts[i].user._id == user._id) { %>
                            <button class="btn btn-danger del-post" id="dp<%= posts[i]._id %>">DELETE</button> <% } %>
                        </div>
                        <div class="feed-body">
                            <p><%= posts[i].body %></p>
                        </div>
                        <hr>
                        <div class="feed-footer row">
                            <div class="col-md-3"></div>
                            <span id="lc<%=id%>"><%=posts[i].likes.length%></span>
                            <% if(posts[i].likes.indexOf(user._id) === -1) { %>
                            <% var l = "LIKE" } else { %>
                            <% var l = "UNLIKE" } %>
                            <button class="col-md-2 like" id="l<%=id%>"><i class="fa fa-thumbs-up"><%=l%></i></button>
                            <div class="col-md-2"></div>
                            <button class="col-md-2" onclick="comment()"><i class="fa fa-comment">Comment</i></button>
                            <div class="col-md-3"></div>
                        </div>
                        <div id="post-comment-area">
                            <input type="text" name="comment" placeholder="Comment Here">
                            <button type="submit" class="btn btn-primary">Comment</button>
                        </div>
                        <textarea class="form-control" rows="2" placeholder="Comment here..." id="cs<%=id%>"></textarea>
                        <button class="btn btn-warning col-md-2 comment" id="c<%=id%>">COMMENT</button>

                        <div  id="cd<%=id%>">
                            <% for(var j = posts[i].comments.length - 1; j >= 0 ; j--) { %>
                            <div class="feed-comments">
                                <div class="row">
                                    <img src="../images/faces/face2.jpg" class="col-sm-1">
                                    <div class="col-sm-9" style="padding-top:2px;">
                                        <h1 class="row"><a href="/profile/<%= posts[i].comments[j].user._id %>"><%= posts[i].comments[j].user.name %></a></h1>
                                        <p class="row">Designation at bla bla</p>
                                    </div>
                                </div>
                                <div class="feed-comments-body">
                                    <p><%= posts[i].comments[j].comment %></p>
                                    <% if(posts[i].comments[j].user._id == user._id) { %>
                                    <button class="btn btn-danger del-comm" id="dc<%= posts[i]._id %><%= posts[i].comments[j]._id %>">DELETE</button> <% } %>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                    <% } %>





                </div>


                <footer class="footer">
                    <div class="container-fluid clearfix">
                        <span class="float-right">
                        <a href="#">Flying Neurons</a> &copy; 2018
                    </span>
                    </div>
                </footer>
            </div>
        </div>
    </div>

